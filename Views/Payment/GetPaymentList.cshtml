@using OnlineConsulting.Enums;

<div class="p-3">

    <h1 class="text-light">Payment list</h1>

    <button class="btn bg-light my-3 " type="button" data-toggle="collapse" data-target="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters">
        Filters
    </button>

    <div class="collapse mb-3" id="collapseFilters">
        <div class="card card-body bg-dark">
            <form id="FiltersForm">

                <div class="d-flex  flex-column">
                    <label for="StartDate"
                           class="text-light mb-0  mr-2">
                        Start date
                    </label>
                    <input name="StartDate"
                           type="date" id="StartDate"
                           class="rounded p-1 bg-light border-0 mt-2" />
                </div>

                <div class="d-flex  flex-column mt-3">
                    <label for="EndDate"
                           class="text-light mb-0  mr-2">
                        End date
                    </label>
                    <input name="EndDate"
                           type="date"
                           id="EndDate"
                           class="rounded p-1 bg-light border-0 mt-2" />
                </div>

                <div class="d-flex  flex-column mt-3">
                    <label for="Status"
                           class="text-light mb-0  mr-2">
                        Status
                    </label>
                    <select id="Status"
                            name="Status"
                            asp-items="Html.GetEnumSelectList<PaymentStatus>()"
                            class="rounded p-1 bg-light border-0 mt-2">
                        <option value="">All</option>
                    </select>
                </div>

                <div class="d-flex  flex-column mt-3">
                    <label for="DotPayOperationNumber"
                           class="text-light mb-0  mr-2">
                        Dotpay operation number
                    </label>
                    <input type="text"
                           name="DotPayOperationNumber"
                           id="DotPayOperationNumber"
                           class="rounded p-1 bg-light border-0 mt-2" />
                </div>

                <div class="d-flex  flex-column mt-3">
                    <label for="EmployerEmail"
                           class="text-light mb-0  mr-2">
                        Employer e-mail
                    </label>
                    <input type="text"
                           name="EmployerEmail"
                           id="EmployerEmail"
                           class="rounded p-1 bg-light border-0 mt-2" />
                </div>

                <button class="btn btn-warning mt-3">Search</button>

            </form>
        </div>
    </div>

    <div class="table-responsive rounded">
        <table class="table">
            <thead class="bg-light">
                <tr>
                    <th class="text-dark">Payment id</th>
                    <th class="text-dark">Create date</th>
                    <th class="text-dark">Price</th>
                    <th class="text-dark">Status</th>
                    <th class="text-dark">Dotpay operation number</th>
                    <th class="text-dark">Subscription type</th>
                    <th class="text-dark">E-mail</th>
                </tr>
            </thead>
            <tbody id="paymentList">
            </tbody>
        </table>
    </div>

    <div class="spinner-border text-warning loader mx-auto my-5" style="display:block;height:100px;width:100px;" role="status" id="ListLoader">
        <span class="sr-only">Loading...</span>
    </div>

    <partial name="/Views/Shared/Pagination/_paginationJs.cshtml" />
</div>
@section Scripts{
    <partial name="/Views/Shared/Scripts/_Dayjs.cshtml" />
    <script defer src="~/js/tools/ajaxHelpers.js"></script>
    <script defer src="~/js/tools/paginationHelpers.js"></script>
    <script defer src="~/js/paymentList.js"></script>
}
