@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container pt-5" style="max-width:700px;">
    <div class="bg-dark shadow-dark rounded p-4">
        <h1 class="text-warning">@ViewData["Title"]</h1>
        <p class="text-light">
            Please check your email to reset your password.
        </p>
        <a class="btn btn-warning" asp-area="Identity" asp-page="/Account/Login">Go to login page</a>
    </div>
</div>
